rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Services folder - readable by all, writable by authenticated users
    match /services/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Service images - readable by all, writable by authenticated users
    match /service-images/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Portfolio images - readable by all, writable by authenticated users
    match /portfolio/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Business assets - readable by all, writable by authenticated users
    match /business/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Public assets (logos, etc.) - readable by all, writable by authenticated users
    match /public/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // User profile images - users can manage their own
    match /profile-images/{userId}/{fileName} {
      allow read: if true;
      allow write: if isOwner(userId) || isAuthenticated();
      allow delete: if isOwner(userId) || isAuthenticated();
    }

    // Client forms - accessible by authenticated users
    match /client-forms/{clientId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Health forms - accessible by authenticated users
    match /health-forms/{clientId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Consent forms - accessible by authenticated users
    match /consent-forms/{clientId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Appointment documents - accessible by authenticated users
    match /appointments/{appointmentId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Before/after photos - accessible by authenticated users
    match /before-after/{clientId}/{fileName} {
      allow read: if true;
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Temporary uploads - users can upload to their own temp folder
    match /temp/{userId}/{fileName} {
      allow read, write: if isOwner(userId) || isAuthenticated();
      allow delete: if isOwner(userId) || isAuthenticated();
    }

    // Admin files - accessible by authenticated users
    match /admin/{fileName} {
      allow read, write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Catch-all for any other paths - allow authenticated users
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
